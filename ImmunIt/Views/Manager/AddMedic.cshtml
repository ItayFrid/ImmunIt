@model ImmunIt.Models.Medic


@{
    ViewBag.Title = "AddMedic";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Medic Register</h2>
<hr />

@using (Html.BeginForm("MedicRegister", "Manager", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputId" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", id = "inputId" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Id)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "inputPassword" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Password)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Full Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "inputName" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Name)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputLicenseNumber" class="col-sm-2 col-form-label">License Number</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.LicenseNumber, new { @class = "form-control", id = "inputLicenseNumber" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.LicenseNumber)</small>
        </div>
    </div>
    <input id="role" name="role" type="hidden" value="Medic" />
    <input class="btn btn-outline-primary" id="submit" type="submit" value="Add Medic" />
    <h4 class="text-danger">@ViewBag.message</h4>
}






