@model ImmunIt.Models.User

@{
    /**/

    ViewBag.Title = "UserLogin";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.form-validator.min.js"></script>
<h2>Login</h2>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputId" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Id, new
            {
               @class = "form-control",
               id = "inputId",
               type = "Id",
               data_validation = "custom",
               data_validation_regexp = "^[0-9]{9,9}$",
               data_validation_help = "ID must be 9 digits"
            })
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "inputPassword" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Password)</small>
        </div>
    </div>
    <input class="btn btn-outline-primary" id="Submit" type="submit" value="Login" />
    <h4 class="text-danger">@ViewBag.UserLoginMessage</h4>
}

<script>
    $.validate();
</script>