
@{
    ViewBag.Title = "SearchPage";
}

<h2>Search Patient</h2>
<hr />
@using (Html.BeginForm("SearchPatients", "FirstAid", FormMethod.Post))
{

    <div class="form-group row">
        <label for="inputID" class="col-sm-2 col-form-label">Patient ID</label>
        <div class="col-sm-10">
            <input name="id" class="form-control" type="text">
        </div>
    </div>

    <input class="btn btn-outline-primary" id="submit" type="submit" value="Search Patient" />
}
